<resources>
<!--  =======  first three Activities style =======-->
    <style name="Theme.PrayerLight.once" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor"> @color/second</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>

<!--   =============== Main style =========== -->
    <style name="Theme.PrayerLight" parent="Theme.AppCompat.Light" >
        <item name="android:statusBarColor">@color/second</item>
        <item name="android:colorPrimary">@color/second</item>
        <item name="android:colorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
        <item name="windowActionBarOverlay"> true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:popupBackground">@color/black</item>
    </style>
<!--       ============== Action bar style ================-->

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="logo">@mipmap/round_icon__round</item>
        <item name="android:icon">@mipmap/round_icon__round</item>
        <item name="height">35dp</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="background">@drawable/actionbar</item>
        <item name="titleTextStyle"> @style/MyActionBarTitleText</item>

    </style>

<!--    ============== Action bar  text style ================-->
    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--    ============== Tab layout style ========-->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIconTint">@color/second</item>
    </style>
<!--    ============= Tab layout text style ========-->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/second</item>
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>
<!--    ========Alert Dialogue style ================ -->
    <style name="Dialog.Style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FF0000</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>