<resources xmlns:tools="http://schemas.android.com/tools">
<!--   =============== Main style =========== -->
    <style name="Theme.PrayerLight" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorPrimary">@color/second</item>
        <item name="android:colorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus" >false</item>
        <item name="android:statusBarColor" >@color/transparent</item>
    </style>

<!--    ========Alert Dialogue style ================ -->
    <style name="Dialog.Style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FF0000</item>
        <item name="android:textColorPrimary">@color/black</item>
