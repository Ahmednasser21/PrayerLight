<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".LocationActivity">

    <ImageView
        android:id="@+id/backI"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@mipmap/setting_foreground"
        tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backI"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/txt"
            android:contentDescription="@string/app_name"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@mipmap/round_icon__round"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backI"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="95dp"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/app_name"
            android:textColor="@color/second"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_background"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:text="@string/location_settings"
            android:textColor="@color/second"
            android:textSize="25sp"
            tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/location"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cairo"
        android:text="@string/automatic_location"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/finish"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cairo"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/previous"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/cairo"
            android:text="@string/previous"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:ignore="TextSizeCheck" />
    </RelativeLayout>