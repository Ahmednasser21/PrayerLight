<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@mipmap/backmain_foreground" />

    <TextView
        android:id="@+id/pray_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/cairo"
        android:text="@string/pray_name"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/pray_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pray_time"
        android:layout_below="@+id/pray_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:fontFamily="@font/cairo_bold"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countdown"
        android:layout_below="@+id/pray_time"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:fontFamily="@font/cairo"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/countdown"
        android:contentDescription="@string/location"
        android:src="@drawable/baseline_location_on_24" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countdown"
        android:layout_alignStart="@+id/location_icon"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/location_text"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_text"
        android:background="@drawable/main_back"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/higri_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/hijri_calender"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/birth_calender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/higri_calender"
            android:layout_marginStart="5dp"
            android:text="@string/birth_calender"
            android:textSize="20sp"
            android:textColor="#E6000000"/>
        <TextView
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sun_rise"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            android:textSize="25sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/sunrise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sunrise"
            android:layout_marginEnd="5dp"
            android:textSize="25sp"
            android:textColor="@color/black" />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/sun_rise"
            android:src="@drawable/ic_sunrise"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="130dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_back2">
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fajr"
                    android:textSize="35sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zohr"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asr"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maghrib"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eshaa"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/fajr"
                    android:src="@drawable/ic_fajr"
                    />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/zohr"
                    android:src="@drawable/baseline_sunny_24"
                    android:layout_marginTop="15dp"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/asr"
                    android:src="@drawable/ic_asr"
                    android:layout_marginTop="10dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/maghrib"
                    android:src="@drawable/ic_maghrib"
                    android:layout_marginTop="12dp" />
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/eshaa"
                    android:src="@drawable/ic_esha"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/fajr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fajr_time"
                    android:textSize="30sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/zohr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zohr_time"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"/>
                <TextView
                    android:id="@+id/asr_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asr_time"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"/>
                <TextView
                    android:id="@+id/maghrib_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maghrib_time"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"/>
                <TextView
                    android:id="@+id/eshaa_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eshaa_time"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>